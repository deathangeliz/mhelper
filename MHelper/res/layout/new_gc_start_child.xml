<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content">
    <Button android:layout_height="wrap_content" android:id="@+id/gcChooseButton" android:layout_width="match_parent" android:layout_weight="1" android:text="Choose GC Item"></Button>
	<Button android:layout_gravity="left"
		android:layout_weight="1" android:text="Start Date" android:layout_height="wrap_content" android:padding="4dp" android:layout_width="match_parent" android:id="@+id/gcDateButton"></Button>
	<Button android:layout_gravity="left"
		android:layout_weight="1" android:text="Start Time" android:layout_height="wrap_content" android:padding="4dp" android:layout_width="match_parent" android:id="@+id/gcTimeButton"></Button>
</LinearLayout>
