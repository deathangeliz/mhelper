<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content">
	<Button android:id="@+id/dateButton"
		android:layout_gravity="left"
		android:layout_weight="1" android:text="Date" android:layout_height="wrap_content" android:padding="4dp" android:layout_width="match_parent"></Button>
	<Button android:id="@+id/timeButton"
		android:layout_gravity="left"
		android:layout_weight="1" android:text="Time" android:layout_height="wrap_content" android:padding="4dp" android:layout_width="match_parent"></Button>
</LinearLayout>
